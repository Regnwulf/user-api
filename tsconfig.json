{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,   // Habilita suporte a decoradores
      "emitDecoratorMetadata": true,    // Habilita metadados para decoradores
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./src"
    },
    "include": ["src/**/*"]
  }
  